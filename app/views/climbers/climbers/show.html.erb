<h1>マイページ</h1>
<p>登録情報</p>
    <%= link_to "編集する", edit_climber_path ,class: "btn btn-primary"%>
<%= link_to "パスワードを変更する","#" %>

<table>
  <tbody>
    <tr>
      <th>名前</th>
      <td><%= @climber.name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @climber.name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @climber.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @climber.address %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @climber.email %></td>
    </tr>
  </tbody>
</table>

