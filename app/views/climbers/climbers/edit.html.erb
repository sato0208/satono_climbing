<h1>登録情報編集</h1>

<table>
  <tbody>
    <%= form_with model: @climber, url:climber_path(@climber.id), method: :PATCH, local: true do |f|  %>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= f.text_field :name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </tbody>
</table>
<%= f.submit "編集内容を保存する" %>
  <% end %>
