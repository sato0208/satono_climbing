<div class="container">
  <h2>ジャンル追加・一覧画面</h2>

      <% if @genre_new.errors.any? %>
      <div class="alert alert-danger">
          <h2><%= @genre_new.errors.count %>つ空白があります</h2>
          <% @genre_new.errors.full_messages.each do |message| %>
          <%= message %><br>
          <% end %>
      </div>
    <% end %>
    <%= form_for @genre_new, url:admins_genres_path do |f| %>
      <div class="field row">
        <%= f.label :ジャンル %>
        <%= f.text_field :genre_name %>
        <label><%= f.radio_button :is_active, "false" %>有効</label>
        <label><%= f.radio_button :is_active, "ture" %>無効</label>
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
    <% end %>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
          <td><%= genre.is_active == false ? "有効" : "無効"%></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre.id) ,class: "btn btn-primary"%></td>
          <td><%= link_to "Destroy", admins_genre_path(genre.id), method: :delete , class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>


