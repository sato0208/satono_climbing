<div class="container">
  <h2>サイズ追加・一覧画面</h2>

      <% if @size_new.errors.any? %>
      <div class="alert alert-danger">
          <h2><%= @size_new.errors.count %>つ空白があります</h2>
          <% @size_new.errors.full_messages.each do |message| %>
          <%= message %><br>
          <% end %>
      </div>
    <% end %>
    <%= form_for @size_new, url:admins_sizes_path do |f| %>
      <div class="field row">
        <%= f.label :サイズ %>
        <%= f.text_field :size, autofocus: true %>
        <label><%= f.radio_button :is_active_size, "false" %>有効</label>
        <label><%= f.radio_button :is_active_size, "ture" %>無効</label>
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
    <% end %>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>サイズ</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @sizes.each do |size| %>
        <tr>
          <td><%= size.size %></td>
          <td><%= size.is_active_size == false ? "有効" : "無効"%></td>
          <td><%= link_to "編集する", edit_admins_size_path(size.id) ,class: "btn btn-primary"%></td>
          <td><%= link_to "Destroy", admins_size_path(size.id), method: :delete , class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>


