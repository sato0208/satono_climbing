<div class="container">
    <h2>商品 詳細画面</h2>
    <div class="row">
        <table>
            <tbody>
                <tr>
                    <%= attachment_image_tag @item, :image, size: '300x200',format: "jpeg" %>
                <tr>
                <tr>
                    <th>商品名</th>
                    <td>
                        <%= @item.item_name %>
                    </td>
                </tr>
                <tr>
                    <th>商品説明文</th>
                    <td>
                        <%= @item.item_description %>
                    </td>
                </tr>
                <tr>
                    <th>税込価格</th>
                    <td>
                        ¥<%= @item.item_price.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <th>販売ステータス</th>
                    <td>
                        <%= @item.is_sale_status  == false ? "売り切れ" : "販売中"%>
                    </td>
                </tr>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <%= link_to '編集する',edit_admins_item_path(@item), class: " btn btn-primary pull-right" %>
    </div>
</div>
</div>