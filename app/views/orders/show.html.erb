<h2>注文履歴詳細</h2>
<table class="table table-inverse">
    <thead>
        <tr>
            <th>注文日</th>
            <td>
                <%= @order.updated_at.strftime("%Y/%m/%d") %>
            </td>
        </tr>
        <tr>
            <th>配送先</th>
            <td>
                <%= (@order.ship_postcode) + (@order.ship_address) + (@order.ship_name) %>
            </td>
        </tr>
        <tr>
            <th>支払方法</th>
            <td>
                <%= @order.pay_method %>
            </td>
        </tr>
        <tr>
            <th>ステータス</th>
            <td>
                <%= @order.order_status %>
            </td>
        </tr>
    </thead>
</table>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @sum %>
        <% @order_item.each do |f| %>
        <tr>
            <td>
                <%= f.order_item_name %>
            </td>
            <td>
               ¥ <%= f.order_item_price.to_s(:delimited) %> </td>
            <td>
                <%= f.order_item_quantity %>
            </td>
            <td>
              ¥ <%= ((f.order_item_price).to_i * (f.order_item_quantity).to_i).to_s(:delimited) %>
            </td>
        </tr>
        <% @sum = f.order_item_price %>
        <% end %>
    </tbody>
</table>
<table class="table table-inverse">
    <thead>
        <tr>
            <th>商品合計</th>
            <td>
                ¥ <%= @sum.to_s(:delimited) %></td>
        </tr>
        <tr>
            <th>配送料</th>
            <td>
                ¥ <%= @order.freight %></td>
        </tr>
        <tr>
            <th>御請求額</th>
            <td>
                ¥ <%= @order.total.to_s(:delimited) %></td>
        </tr>
    </thead>
</table>